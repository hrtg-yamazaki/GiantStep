= render 'shared/hidden'
  
.container
  .wrapper
    .mypage-contents
      .mypage-contents__head
        %h2.mypage-contents__head__text マイページ
      
      .mypage-contents__main.clearfix
        .mypage-contents__main__left
          .mypage-left
            .mypage-left__content.clearfix
              .mypage-left__content__chart
                .cumulative-chart
                  %canvas#cumulative-radar.cumulative-chart__rader{style: 'height:100%; width: 100%;'}
              .mypage-left__content__sheet
                %table.cumulative-sheet
                  %thead.cumulative-sheet__head
                    %tr.cumulative-sheet__head__row
                      %th.cumulative-sheet__head__row--left{colspan: "2"} 累計実績
                  %tbody.cumulative-sheet__body
                    %tr.cumulative-sheet__body__row
                      %td.cumulative-sheet__body__row--left 合計Pt.
                      %td.cumulative-sheet__body__row--right=Status.total_point(@status)
                %table.cumulative-sheet
                  %thead.cumulative-sheet__head
                    %tr.cumulative-sheet__head__row
                      %th.cumulative-sheet__head__row--left{colspan: "2"} 累計実績 ( 科目別 ) 
                  %tbody.cumulative-sheet__body
                    %tr.cumulative-sheet__body__row
                      %td.cumulative-sheet__body__row--left 睡眠
                      %td.cumulative-sheet__body__row--right=@status.sleep
                    %tr.cumulative-sheet__body__row
                      %td.cumulative-sheet__body__row--left 自主学習
                      %td.cumulative-sheet__body__row--right=@status.study
                    %tr.cumulative-sheet__body__row
                      %td.cumulative-sheet__body__row--left 運動
                      %td.cumulative-sheet__body__row--right=@status.exercise
                    %tr.cumulative-sheet__body__row
                      %td.cumulative-sheet__body__row--left 食習慣
                      %td.cumulative-sheet__body__row--right=@status.diet
                    %tr.cumulative-sheet__body__row
                      %td.cumulative-sheet__body__row--left 嗜好品
                      %td.cumulative-sheet__body__row--right=@status.habit
                    %tr.cumulative-sheet__body__row
                      %td.cumulative-sheet__body__row--left 目標達成
                      %td.cumulative-sheet__body__row--right=@status.aim

            .mypage-interface
              %ul.mypage-interface__box
                %li.mypage-interface__box__content 総合
                %li.mypage-interface__box__content 睡眠
                %li.mypage-interface__box__content 学習
                %li.mypage-interface__box__content 運動
                %li.mypage-interface__box__content 食事
                %li.mypage-interface__box__content 嗜好
                %li.mypage-interface__box__content 目標
                %li.mypage-interface__box__content
                  =link_to '再計算', statuses_path, class: 'recalculate'
          

        .mypage-contents__main__right
          .mypage-right
            .mypage-right__content
              .mypage-profile
                .mypage-profile__thumbnail
                  %p.no-image No image
                .mypage-profile__name
                  %h4.mypage-profile__name__text
                    %span.bold-weight=@status.user.nickname
                    %span さん
                .mypage-profile__level
                  %h4.mypage-profile__level__text
                    %span Lv. 
                    %span.bold-weight XXX
                .mypage-profile__sheet
                  %table.cumulative-sheet
                    %thead.cumulative-sheet__head
                      %tr.cumulative-sheet__head__row
                        %th.cumulative-sheet__head__row--left{colspan: "2"} 利用状況
                        -# %th.cumulative-sheet__head__row--right .
                    %tbody.cumulative-sheet__body
                      %tr.cumulative-sheet__body__row
                        %td.cumulative-sheet__body__row--left 合計日数
                        %td.cumulative-sheet__body__row--right=@status.login
                      %tr.cumulative-sheet__body__row
                        %td.cumulative-sheet__body__row--left 継続日数
                        %td.cumulative-sheet__body__row--right (準備中)
                      %tr.cumulative-sheet__body__row
                        %td.cumulative-sheet__body__row--left 利用開始日
                        %td.cumulative-sheet__body__row--right=@status.user.created_at.strftime("%Y/%m/%d")


