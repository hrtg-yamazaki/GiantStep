.mypage-right
  .mypage-right__content
    .mypage-profile
      -# .mypage-profile__thumbnail
        -# %p.no-image No image
      .mypage-profile__name
        %h4.mypage-profile__name__text
          %span.bold-weight=@status.user.nickname
          %span さん
      .mypage-profile__level
        %h4.mypage-profile__level__text
          %span Lv. 
          %span.bold-weight (近日実装予定)
      .mypage-profile__gender<
        %span.mypage-profile__gender__text 性別：
        %span.mypage-profile__gender__text.bold-weight=@status.user.gender_i18n
      .mypage-profile__profile
        %h4.mypage-profile__profile__head 自己紹介：
        %p.mypage-profile__profile__text=@status.user.profile
      .mypage-profile__sheet
        %table.cumulative-sheet
          %thead.cumulative-sheet__head
            %tr.cumulative-sheet__head__row
              %th.cumulative-sheet__head__row--left{colspan: "2"} 利用状況
              -# %th.cumulative-sheet__head__row--right .
          %tbody.cumulative-sheet__body
            %tr.cumulative-sheet__body__row
              %td.cumulative-sheet__body__row--left 合計日数
              %td.cumulative-sheet__body__row--right=@status.login
            %tr.cumulative-sheet__body__row
              %td.cumulative-sheet__body__row--left 継続日数
              %td.cumulative-sheet__body__row--right (準備中)
            %tr.cumulative-sheet__body__row
              %td.cumulative-sheet__body__row--left 利用開始日
              %td.cumulative-sheet__body__row--right=@status.user.created_at.strftime("%Y/%m/%d")