.container
  .wrapper
    %h1 記録入力ページ
    = form_for @record, url: records_path, method: :post do |f|
      
      .record-field
        = f.label :sleep
        %br/
        %p=@yardstick.sleep
        = f.select :sleep, options_for_select({ "０": 0, "１pt": 1, "２pt": 2 })
      .record-field
        = f.label :study
        %br/
        %p=@yardstick.study
        = f.select :study, options_for_select({ "０": 0, "１pt": 1, "２pt": 2 })
      .record-field
        = f.label :exercise
        %br/
        %p=@yardstick.exercise
        = f.select :exercise, options_for_select({ "０": 0, "１pt": 1, "２pt": 2 })
      .record-field
        = f.label :diet
        %br/
        %p=@yardstick.diet
        = f.select :diet, options_for_select({ "０": 0, "１pt": 1, "２pt": 2 })
      .record-field
        = f.label :habit
        %br/
        %p=@yardstick.habit
        = f.select :habit, options_for_select({ "０": 0, "１pt": 1, "２pt": 2 })
      .record-field
        = f.label :aim
        %br/
        %p=@yardstick.aim
        = f.select :aim, options_for_select({ "０": 0, "１pt": 1, "２pt": 2 })

      .record-submit
        = f.submit "登録"
